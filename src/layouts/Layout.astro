---
import Nav from "../components/Nav.astro";
const { title } = Astro.props;
import domPx from "../assets/domPx2.png?url";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A loosely organised collection of Dominic Cummings's writings, podcasts and videos."
    />
    <link rel="icon" type="image/svg+xml" href="/" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta content="website" property="og:type" />
    <meta content={title} property="og:title" />
    <meta property="og:image" content={domPx} />
    <title>{title}</title>
    <script
      defer
      data-domain="dominiccummingsreader.netlify.app"
      src="https://plausible.io/js/script.js"></script>
  </head>
  <body>
    <main>
      <Nav />
      <slot />
    </main>
  </body>
</html>

<style is:global>
  /* Base styles */
  html {
    font-family: system-ui, sans-serif;
  }

  body {
    margin: 0;
    padding: 1rem;
  }

  article {
    max-width: 800px;
  }

  article p {
    line-height: 18px;
  }

  blockquote {
    background-color: #f8f8f8;
    border-left: 4px solid #e0e0e0;
    margin: 1.75rem 0;
    padding: 12px 16px;
    font-style: italic;
    color: #111;
  }

  blockquote p {
    margin: 0;
    line-height: 18px;
  }

  table {
    border-collapse: collapse;
    width: 100%;
    margin: 1rem 0;
    font-size: 1rem;
  }

  th,
  td {
    padding: 0.75rem;
    text-align: left;
    border-bottom: 0.0625rem solid #e0e0e0;
  }

  th {
    font-weight: bold;
    background-color: #f4f4f4;
  }

  /* Light mode specific styles */
  tbody tr:nth-child(even) {
    background-color: #f8f8f8;
  }

  /* Media queries */
  @media screen and (min-width: 768px) {
    body {
      padding: 1rem;
    }

    main {
      display: grid;
      grid-template: min-content 1fr min-content / 12.25rem minmax(0, 1fr);
    }
  }

  /* Dark mode styles */
  @media (prefers-color-scheme: dark) {
    html {
      background-color: #111111;
      color: #fff;
    }

    a {
      color: lightskyblue;
    }

    a:hover {
      color: lightseagreen;
    }

    blockquote {
      background-color: #2a2a2a;
      border-left-color: #444;
      color: #e0e0e0;
    }

    table {
      color: #e0e0e0;
    }

    th,
    td {
      border-bottom-color: #444;
    }

    th {
      background-color: #2a2a2a;
    }

    tbody tr:nth-child(even) {
      background-color: #2a2a2a;
    }

    tbody tr:nth-child(odd) {
      background-color: #333;
    }
  }
</style>
